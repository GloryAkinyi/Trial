<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">


   <TextView
       android:id="@+id/text"
       android:textColor="@color/black"
       android:textStyle="bold"
       android:textSize="30dp"
       android:text="PRODUCTS"
       android:layout_marginStart="70dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    
    <GridLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/grid"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_below="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!---cloth1-->
        <androidx.cardview.widget.CardView
            android:layout_row="0"
            android:layout_column="0"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <ImageView
                  android:src="@drawable/cloth1"
                  android:layout_width="150dp"
                  android:layout_height="150dp"/>
              <TextView
                  android:layout_marginStart="50dp"
                  android:textSize="20dp"
                  android:text="Men's shirt"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:layout_marginStart="50dp"
                  android:textSize="20dp"
                  android:text="Ksh.1200"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

          </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!---cloth2-->
        <androidx.cardview.widget.CardView
            android:layout_row="0"
            android:layout_column="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/cloth5"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
                <TextView
                    android:layout_marginStart="50dp"
                    android:textSize="20dp"
                    android:text="Blazer"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="50dp"
                    android:textSize="20dp"
                    android:text="Ksh.1000"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!---cloth3-->
        <androidx.cardview.widget.CardView
            android:layout_row="1"
            android:layout_column="0"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/cloth6"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
                <TextView
                    android:layout_marginStart="50dp"
                    android:textSize="20dp"
                    android:text="Lady's hat"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="50dp"
                    android:textSize="20dp"
                    android:text="Ksh.2300"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!---cloth4-->
        <androidx.cardview.widget.CardView
            android:layout_row="1"
            android:layout_column="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/scarf"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
                <TextView
                    android:layout_marginStart="50dp"
                    android:textSize="20dp"
                    android:text="Scarf"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="50dp"
                    android:textSize="20dp"
                    android:text="Ksh.4200"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!---cloth5-->
        <androidx.cardview.widget.CardView
            android:layout_row="2"
            android:layout_column="0"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/cloth2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
                <TextView
                    android:layout_marginStart="50dp"
                    android:textSize="20dp"
                    android:text="Men's shirt"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="50dp"
                    android:textSize="20dp"
                    android:text="Ksh.2600"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!---cloth6-->
        <androidx.cardview.widget.CardView
            android:layout_row="2"
            android:layout_column="1"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/cloth4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    />
                <TextView
                    android:layout_marginStart="50dp"
                    android:textSize="20dp"
                    android:text="Men's shirt"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="50dp"
                    android:textSize="20dp"
                    android:text="Ksh.1200"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>


</RelativeLayout>